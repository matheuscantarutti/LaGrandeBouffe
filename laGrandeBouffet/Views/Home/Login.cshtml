@model laGrandeBouffet.ViewModels.Home.LoginViewModel;

@{
    ViewData["Title"] = "Acesso dos colaboradores";
}
<div class="container-fluid d-flex justify-content-center">

    <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">@ViewData["Title"]</h5>
            @if (Model.ErroLogin != null)
            {
                <p class="text-danger font-weight-bold text-center">@Model.ErroLogin</p>

            }
            <form method="POST" action="">
                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input type="email" class="form-control" id="email-login" name="emailLogin" aria-describedby="loginHelp" placeholder="Digite seu email">
                    @if (Model.ErroEmail != null) 
                    {
                        <small id="loginHelp" class="form-text text-danger">@Model.ErroEmail</small>
                    }
                </div>
                <div class="form-group">
                    <label for="senha-acesso">Senha</label>
                    <input type="password" class="form-control" id="senha-acesso" name="senhaLogin" aria-describedby="senhaHelp" placeholder="Senha">
                    @if (Model.ErroSenha != null)
                    {
                        <small id="senhaHelp" class="form-text text-danger">@Model.ErroSenha</small>
                    }
                </div>


                <div class="d-flex justify-content-center mb-2">
                    <button type="submit" class="btn btn-success w-100" >Entrar</button>
                </div>

                <div class="text-center mb-2">
                    <a class="card-link" asp-area="" asp-controller="Home" asp-action="RecuperaAcesso">Esqueceu sua senha?</a>
                </div>


                <div class="text-center">
                    <a class=" w-100 btn btn-primary" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastrar-se</a>
                </div>

            </form>

        </div>
    </div>

</div>



