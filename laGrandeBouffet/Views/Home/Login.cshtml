@model laGrandeBouffet.ViewModels.Home.CadastroViewModel;

@{
    ViewData["Title"] = "Acesso dos colaboradores";
}
<div class="container-fluid d-flex justify-content-center">

    <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">@ViewData["Title"]</h5>
            @if (Model.SucessoCadastro != null)
            {
                <p>@Model.SucessoCadastro</p>

            }
            <form method="POST" action="">
                <div class="form-group">
                    <label for="email-login">Email</label>
                    <input type="email" class="form-control" id="email-login" aria-describedby="loginHelp" placeholder="Digite seu email">
                    <small id="loginHelp" class="form-text text-muted">Ultilize sua conta de email cadastrada para ter acesso.</small>
                </div>
                <div class="form-group">
                    <label for="senha-acesso">Senha</label>
                    <input type="password" class="form-control" id="senha-acesso" placeholder="Senha">
                </div>


                <div class="d-flex justify-content-center mb-2">
                    <button type="submit" class="btn btn-success w-100" asp-controller="Dashboard" asp-action="Index">Entrar</button>
                </div>

                <div class="text-center mb-2">
                    <a class="card-link" asp-area="" asp-controller="Home" asp-action="RecuperaAcesso">Esqueceu sua senha?</a>
                </div>


                <div class="text-center">
                    <a class=" w-100 btn btn-primary" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastrar-se</a>
                </div>

            </form>

        </div>
    </div>

</div>



